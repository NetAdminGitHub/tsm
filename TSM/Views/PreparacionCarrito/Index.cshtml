@{
    ViewBag.Title = "Preparación de Mercancía";
    ViewBag.IdVersion = "TSMTSM0101120|v22072701";
}

@section Scripts {
    <script src="~/Scripts/js/PreparacionCarrito.js?@ViewBag.IdVersion"></script>

}
<style>
    tsm-label-center {
        display: block;
        text-align: center;
    }
</style>

<div class="form-row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body container">

                <div class="form-row">
                    <!--COMBOS Y PRIMER GRID-->
                    <div class="form-group col-lg-5">

                        <div class="form-row">
                            <div class="form-group col-lg-6">
                                <label for="cmbCliente">Cliente:</label>
                                <input id="cmbCliente" name="cmbCliente" class="form-control" />
                            </div>
                            <div class="form-group col-lg-6">
                                <label for="cmbPlanta" id="lblPlanta">Planta:</label>
                                <input id="cmbPlanta" name="cmbPlanta" class="form-control" />
                            </div>
                           
                        </div>

                        <div class="form-row">
                            <div class="form-group col-lg-6">
                                <label for="cmbFm">Código FM:</label>
                                <input id="cmbFm" name="cmbFm" type="text" class="form-control" />
                            </div>
                            <div class="form-group col-lg-6">
                                <label for="cmbCorte">Corte:</label>
                                <input id="cmbCorte" name="cmbCorte" type="text" class="form-control" />
                            </div>

                          
                        </div>

                        <div class="form-row">
                            <div class="form-group col-lg-12">
                                <div id="treelist"> </div>
                            </div>
                        </div>

                    </div>
                    <!--BOTÓN CARRITO-->
                    <div class="form-group col-lg-1 d-flex flex-column justify-content-center align-items-center text-center">

                        <div class="form-row">
                            <div class="form-group col-lg-12">
                                <button type="button" id="btnCreaCarrito"></button>
                                <label class="mt-1 px-3">Pasar a Generar <br /> un Carrito</label>
                            </div>
                        </div>

                    </div>
                    <!--BOTONES Y SEGUNDO GRID-->
                    <div class="form-group col-lg-6" style="margin-top: 30px;">

                        <div class="form-row">
                         
                            <div class="form-group col-lg-12 text-right" style="align-self:end;">
                                <button type="button" id="btnDetallePrep" class="mr-1">Consulta de Carritos</button>
                                <button type="button" id="btnPrep" class="mr-1">Finalizar Preparación</button>
                                <button type="button" id="btnEntProd">Entrega a Maquina</button>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-lg-6">
                                <label for="txtDiseño">Diseño:</label>
                                <input id="txtDiseño" name="txtDiseño" type="text" class="k-textbox form-control" readonly />
                            </div>

                            <div class="form-group col-lg-6">
                                <label for="txtEstilo">Estilo:</label>
                                <input id="txtEstilo" name="txtEstilo" type="text" class="k-textbox form-control" readonly />
                            </div>

                        </div>

                        <div class="form-row" @*style="margin-top: 33px;"*@>
                            <div class="form-group col-lg-12">
                                <div id="gridDetCortePre"></div>
                            </div>
                        </div>

                    </div>
                </div>

                

                <!--<div class="form-row"><br /></div>
                <div class="form-row">
                    <div class="col-lg-5">
                        
                    </div>
                    <div class="col-lg-1 d-flex flex-column justify-content-center align-items-center text-center">
                        <button type="button" id="btnCreaCarrito"></button>
                        <label class="mt-1 px-3">Pasar a Generar un Carrito</label>
                    </div>
                    <div class="col-lg-6">
                        
                    </div>
                </div>-->


            </div>
        </div>
    </div>
</div>
@*vista modal detalle de preparado*@
<div id="vdPreparado"></div>

@*vista modal entrega a prod*@
<div id="vEntreTela"></div>