@{
    ViewBag.Title = "Preparación de Mercancía";
    ViewBag.IdVersion = "TSMTSM0101120|v22042202";
}

@section Scripts {
    <script src="~/Scripts/js/PreparacionCarrito.js?@ViewBag.IdVersion"></script>

}
<style>
    tsm-label-center {
        display: block;
        text-align: center;
    }
</style>

<div class="form-row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body container">
                <div class="form-row">
                    <div class="col-lg-12 text-right" style="align-self: center;">
                        <button type="button" id="btnDetallePrep">Detalle de Preparado</button>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-3">
                        <label for="cmbCliente">Cliente:</label>
                        <input id="cmbCliente" name="cmbCliente" class="form-control" />
                    </div>
                    <div class="form-group col-lg-3">
                        <label for="cmbFm">Código FM:</label>
                        <input id="cmbFm" name="cmbFm" type="text" class="form-control" />
                    </div>
                    <div class="form-group col-lg-6 text-right" style="align-self:end;">
                        <button type="button" id="btnPrep" class="mr-1">Preparar</button>
                        <button type="button" id="btnEntProd">Entrega a Produccion</button>
                    </div>


                </div>
                <div class="form-row"><br /></div>
                <div class="form-row">
                    <div class="col-lg-6">
                        <div id="treelist"> </div>
                    </div>
                    <div class="col-lg-1" style="text-align: center; align-self:center;">
                        <button type="button" id="btnCreaCarrito"></button>
                    </div>
                    <div class="col-lg-5">
                        <div id="gridDetCortePre"></div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
@*vista modal detalle de preparado*@
<div id="vdPreparado"></div>

@*vista modal entrega a prod*@
<div id="vEntreTela"></div>