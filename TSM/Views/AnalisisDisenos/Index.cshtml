<link href="~/Content/bootstrap/AdjCarousel.css" rel="stylesheet" />
<style>
    #splitter,
    #ReqDes {
        margin: 0;
        padding: 0;
        border-width: 0;
        height: 100%;
    }
</style>
<div class="row">
    <div class="form-group col-lg-12"> <h5>Analisis del Diseño a Estampar</h5></div>
</div>
<div class="row">
    <div class="form-group col-md-1 col-lg-1">
        <label for="IdServicio" style="font-size: 1.2em;">Servicio :</label>
    </div>
    <div class="form-group col-md-3 col-lg-3">
        <input id="IdServicio" name="IdServicio" required validationMessage="Requerido" class="form-control" />
    </div>
    <div class="form-group  col-md-1 col-lg-1">
        <label for="IdCliente" style="font-size: 1.2em;">Cliente :</label>

    </div>
    <div class="form-group  col-md-3 col-lg-4">
        <input id="IdCliente" name="IdCliente" required validationMessage="Requerido" class="form-control" />
    </div>
    <div class="form-group col-md-4 col-lg-3">
        <button type="button" id="btnCambioEstado" name="btnCambioEstado">&nbsp;Cambio de Estado</button>
    </div>
</div>


<div id="splitter">
    <div id="middle-panel" class="form-control">
        <div id="ReqDes" class="form-control"></div>
    </div>
    <div id="bottom-panel" class="form-control">
        @Html.Partial("_EstadoRequerimientoDesarrollo")
        <div class="row">
            <div class="form-group col-lg-12">
                <div class="row">
                    <div class="col-lg-11"><label class="font-weight-bold" style=" font-size:1.2em;">Información general</label></div>
                    <div class="col-lg-1 align-self-end"> <button type="button" id="btnVerReq" name="btnVerReq"></button></div>
                    <div id="vConsulta"></div>
                </div>
                <div class="row" id="divSerigrafia">
                    @Html.Partial("_AnalisDisenoSerigrafia")
                </div>
                <div class="row" id="divSubli" hidden="hidden">
                    @Html.Partial("_AnalisDisenoSublimacion")
                </div>

                <div class="row" id="divPlan" hidden="hidden">
                    @Html.Partial("_AnalisDisenoPlantilla")
                </div>
            </div>
        </div>
        @* div utilizado para cargar la vista estados *@
        <div class="row" id="vConsultaEstados"></div>
        @*Etiqueta vista parcial cambio de estado*@
        <div id="vCambioEstado"></div>
    </div>
</div>