@{
    ViewBag.Title = "Ingresos de Mercancía";
    ViewBag.IdVersion = "TSM0101112|v22052602";
}

@section Scripts {
    <script type="text/javascript">
        var xIdClienteIng = @ViewBag.IdCliente;
        var xIdIngreso = @ViewBag.IdIngreso;
    </script>
    <script src="~/Scripts/js/IngresoMercancias.js?@ViewBag.IdVersion"></script>
}
<style>
    tsm-label-center {
        display: block;
        text-align: center;
    }
</style>
<div class="form-row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="form-row">
                    <div class="col-lg-3 form-group">
                        <label for="num_Ingreso"># Ingreso:</label>
                        <input id="num_Ingreso" name="num_Ingreso" type="text" class="form-control" />
                    </div>
                    <div class="col-lg-3 form-group">
                        <label for="dFecha">Fecha:</label>
                        <input id="dFecha" name="dFecha" class="form-control" />
                    </div>
                    <div class="col-lg-3 form-group">
                        <label for="cmbCliente" id="lblCliente">Cliente:</label>
                        <input id="cmbCliente" name="cmbCliente" class="form-control" />
                    </div>
                    <div class="col-lg-3 form-group">
                        <label for="txtEstado" id="lbltxtEstado">Estado:</label>
                        <input id="txtEstado" name="txtEstado" class="k-textbox form-control" />
                    </div>
                    <div class="col-lg-6" style="text-align: left; align-self: end;">
                        <button type="button" id="btnCrearHoja">Crear Hojas de Bandeo</button>
                    </div>
                    <div class="col-lg-6" style="text-align: right; align-self: end;">
                        <button type="button" id="btnCrearLista">Crear Lista de Empaque</button>
                    </div>

                </div>
                <div class="form-row"><br /></div>
                <div class="form-row">
                    <div class="col-lg-6">
                        <div id="gridHoja"></div>
                    </div>
                    <div class="col-lg-6">
                        <div id="gridLista"></div>
                    </div>
                </div>

                @*<div class="form-group">
                        <div id="grid"></div>
                    </div>*@
            </div>
        </div>
    </div>
</div>
@*ingreso control de bultos*@
<div id="vMod_controlbulto"></div>

@*ingreso Crear lista empaque *@
<div id="vMod_CrearListaEmpaque"></div>