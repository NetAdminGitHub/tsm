
@{
    ViewBag.Title = "Información de Simulación de Muestras";
    ViewBag.IdVersion = "TSM0101060|v19092001";

}

@section Scripts{
    <script type="text/javascript">
        var vIdSimulacion =@ViewData["IdSimulacion"];
        var VIdSer =@ViewData["IdServicio"];
        var vIdOT=@ViewData["IdOrdenTrabajo"];
    </script>
    <script src="~/Scripts/js/SimulacionesMuestrasInfo.js?@ViewBag.IdVersion"></script>
    <script src="~/Scripts/Utils/ChartTSMPersonalizar.js"></script>
}

<div class="form-row">
    <div class="col-lg-12">
        <div class="card">
            <div class="border p-md-1 p-lg-1">
                <div id="TabSimulacion">
                    <ul>
                        <li class="k-state-active">
                            Datos de Simulación
                        </li>
                        <li>
                            Consumos
                        </li>
                        <li>
                            Rentabilidad
                        </li>
                    </ul>
                    <div id="TabPDatos">
                        <div class="form-row">
                            <div class="form-group col-lg-10 align-self-end">
                                <div class="input-group">
                                    <div style="width: 100%;">
                                        <button type="button" id="btnRecalcular" name="btnRecalcular"></button>
                                        <button type="button" id="btnCambioEstado" name="btnCambioEstado"></button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-lg-2 align-self-end">
                                <div class="input-group">
                                    <div style="width: 100%;">
                                        <button type="button" id="btnIrSimu" name="btnIrSimu">Ir a Simulaciones</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="pvSimulacion"></div>
                        @*Distribución de Costos*@
                        <div class="form-row">
                            <div class="col-md-12 col-lg-12"><label class="font-weight-bold">Distribución de Costos</label></div>
                        </div>
                        <div class="form-row">
                            <div id="chart" class="col"></div>

                        </div>
                        <div class="form-row">
                            <div class="form-group col-lg-4 align-self-end">
                                <div class="input-group">
                                    <div style="width: 100%;">
                                        <span id="chartexp2"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="TabPConsu">
                        <div class="form-row">
                            <div class="form-group col-lg-12">
                                <label class="font-weight-bold">Consumos por estaci&oacute;n</label>
                            </div>
                            <div class="form-group col-lg-3 align-self-end">
                                <input id="chkSecuenciaCompleta" type="checkbox" name="chkSecuenciaCompleta" class="k-checkbox"  />
                                <label class="k-checkbox-label" for="chkSecuenciaCompleta">Ver secuencia completa</label>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class=" form-group col-lg-12"><div id="gridSimuConsumo"></div></div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <label class="font-weight-bold">Detalle de consumos por materias primas</label>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class=" form-group col-lg-12"><div id="gridSimuConsumoArt"></div></div>
                        </div>
                    </div>
                    <div id="TabPSimu">
                        <div class="form-row">
                            <div class="form-group col">
                                <label class="font-weight-bold">Rentabilidades</label>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class=" form-group col-lg-12"><div id="gridRentabilidad"></div></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-row">
    @*Etiqueta vista parcial cambio de estado*@
    <div class="form-control col-md-12 col-lg-12" id="vCambioEstado"></div>
</div>

@Html.Partial("_Recalcular")
