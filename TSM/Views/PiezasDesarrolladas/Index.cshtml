@{
    ViewBag.Title = "Registro de Piezas Desarrolladas";
    ViewBag.IdVersion = "TSM0101098|v210401501";
}

@section Scripts {
    <script type="text/javascript">
        let crudServiceBaseUrl = "@string.Format("{0}PiezasDesarrolladas", TSM.Utils.Config.TSM_WebApi)";
        let varTiposPiezas = "@string.Format("{0}TiposPiezas", TSM.Utils.Config.TSM_WebApi)";
    </script>
    <script src="~/Scripts/js/PiezasDesarrolladas.js"></script>
}

<div class="form-row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <button type="button" id="btnCambiarEstado">Asignar Resultado</button>
                    <button type="button" id="btnCriteriosCalidad">Resultados de CTQ's</button>
                </div>
                <div class="form-group">
                    <label for="CmbOrdenTrabajo">Orden de Trabajo:</label>
                    <input id="CmbOrdenTrabajo" name="CmbOrdenTrabajo" type="text" class="form-control" />
                </div>

             
                    <div  class="form-group ">
                        <label id="labelcons" for="grid" class="k-grid-toolbar"><h3>Piezas desarrolladas</h3></label>
                        <div id="grid"></div>

                    </div>
                    <div  id="statusSection" class="form-group ">
                        <label id="lblstatus" for="gridEstados" class="k-grid-toolbar"><h3>Cambios de estados:</h3></label>
                        <div id="gridEstados"></div>

                    </div>
          

            </div>
        </div>
    </div>
</div>


<div class="form-row">
    <div id="ModalInfoComplementariaLab">
        <form id="FrmInfoComplementariaLab" method="POST" enctype="multipart/form-data" autocomplete="off">

            <div class=" col-lg-12">

                <div class="form-group col-lg-12">
                    <label for="CmbCalidadPrueba">Tipo de prueba</label>
                    <input id="CmbCalidadPrueba" name="CmbCalidadPrueba" class="form-control" required validationMessage="Requerido" />
                </div>

                <div class="form-group col-lg-6">
                    <label for="NumCantLavadas">Número de lavadas</label>
                    <input id="NumCantLavadas" name="NumCantLavadas" class="form-control" required value="0" />
                </div>
                <div class="form-group col-lg-6">
                    <label for="NumCantQuemadas">Número de quemadas</label>
                    <input id="NumCantQuemadas" name="NumCantQuemadas" class="form-control" required value="0" />
                </div>

                <div class="form-group col-lg-6 align-self-end">
                    <input type="checkbox" id="SNLectura" name="SNLectura" class="k-checkbox">
                    <label class="k-checkbox-label" for="SNLectura">Incluye lectura</label>
                </div>
                <div class="form-group col-lg-12 ">
                    <label for="ComentariosLab">Comentarios</label>
                    <textarea id="ComentariosLab" name="ComentariosLab" class=" form-control k-input" rows="5" style="height:auto;"></textarea>
                </div>
            </div>
                    
        </form>
    </div>
</div>

<div id="CriteriosCriticos"></div>
<div id="vCambioEstadoPD"></div>