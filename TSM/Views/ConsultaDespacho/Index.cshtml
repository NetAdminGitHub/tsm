@{
    ViewBag.Title = "Consulta de Despacho";
    ViewBag.IdVersion = "TSM0101142|v22081901";
}
@section Scripts {

    <script src="~/Scripts/js/ConsultaDespacho.js?@ViewBag.IdVersion"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-lg-5">
                        <label for="cmbCliente" id="lblCliente">Cliente:</label>
                        <input id="cmbCliente" name="cmbCliente" class="form-control" />
                    </div>
                    <div class="col-lg-3">
                        <label for="cmbMarca" id="lblMarca">Marca:</label>
                        <input id="cmbMarca" name="cmbMarca" class="form-control" />
                    </div>
                    <div class="col-lg-2">
                        <label for="cmbPlanta" id="lblPlanta">Planta:</label>
                        <input id="cmbPlanta" name="cmbPlanta" class="form-control" />
                    </div>

                    <div class="col-lg-2 mt-auto">
                        <button type="button" id="btnSolicitarDespacho">Solicitar Despacho</button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div id="gridDespachos"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@*status de orden de despacho*@
<div id="vMod_statusOrdenDespacho"></div>
