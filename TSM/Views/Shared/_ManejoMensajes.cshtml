@using TSM.MicroServicios

@model Mensajes

@if (Model != null)
{
    <script type="text/javascript">
        window.onload = function () {
            $('#ManejoErrores').modal('show');
        };
    </script>
    <!-- Modal -->
    <div class="modal fade" id="ManejoErrores" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">@Model.Titulo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        <div class="row">
                            <div class="col-4 text-center">
                                <span class="@Model._Icono" style="font-size: 48px;"></span>
                            </div>
                            <div class="col-8">
                                <p>@Model.Mensaje</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @if (Model.Icono != Mensajes.Iconos.Pregunta)
                    {
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Aceptar</button>
                    }
                    else
                    {
                        @Html.ActionLink("Si", Model.AccionSi.ToString(), Model.ControladorSi.ToString(), routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
                        if (string.IsNullOrEmpty(Model.AccionNo.ToString().Trim()))
                        {
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                        }
                        else
                        {
                            @Html.ActionLink("Si", Model.AccionSi.ToString(), Model.ControladorSi.ToString(), routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
                            @Html.ActionLink("Si", Model.AccionNo.ToString(), Model.ControladorNo.ToString(), routeValues: null, htmlAttributes: new { @class = "btn btn-secondary" })
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}
