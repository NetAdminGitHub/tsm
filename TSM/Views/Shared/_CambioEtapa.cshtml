
<form id="FrmCambioEstado" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-lg-12">
            <label for="cmbEtapas">Etapas:</label>
            <input id="cmbEtapas" name="cmbEtapas" required validationMessage="Requerido" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-lg-12">
            <label for="TxtMotivoEtapa" id="lblMotivoEtapa" name="lblMotivoEtapa">Motivo:</label>
