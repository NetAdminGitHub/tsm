@if (Request.IsAuthenticated)
{
    <text>
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-toggle="modal" data-target="#exampleModalCenter" href="#">
                    @User.Identity.Name
                </a>                
            </li>
            @*<li class="nav-item">
                @Html.ActionLink("Salir", "SignOut", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link" })
            </li>*@
        </ul>
    </text>
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Perfil de Usuario</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="table">
                        <div class="row">
                            <div class="col-4 text-center">
                                <span class="TS-icon-USUARIO" style="font-size: 100px;"></span>
                            </div>
                            <div class="col-8">
                                <h6 class="font-weight-bold">Correo Electrónico</h6>
                                @User.Identity.Name
                            </div>
                        </div>
                    </div>                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                    @Html.ActionLink("Finalizar Sesión", "SignOut", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
}
