<form id="FrmSolicitarAjuste" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-lg-6">
            <label for="cmbCambioSolicitud">Tipo de cambio:</label>
            <input id="cmbCambioSolicitud" name="cmbCambioSolicitud" required validationMessage="Requerido" class="form-control" />
        </div>
        <div class="form-group col-lg-4 align-self-end">
            <div class="input-group">
                <div style="width: 100%;">
                    <button type="button" class=" k-primary" id="btnAjustesSolicitud">Solicitar Ajuste</button>
                    <button type="button" id="btnBorraAjustesSolicitud" name="btnBorraAjustesSolicitud">Borrar Ajuste Registrado</button>
                </div>
            </div>
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-lg-6">
            <label for="cmbReproceso">Reproceso:</label>
            <input id="cmbReproceso" name="cmbReproceso" required validationMessage="Requerido" class="form-control" />
        </div>
        <div class="form-group col-lg-6">
            <label for="cmbMotivoAjuste">Motivo de Ajuste:</label>
            <input id="cmbMotivoAjuste" name="cmbMotivoAjuste" required validationMessage="Requerido" class="form-control" />
        </div>
    </div>
    <div class="form-row"><br /></div>
    <div class="form-row">
        <div class="form-group col-lg-12">
            <label for="MultEstacion">Seleccione la estacion(es) para ajustar:</label>
            <input id="MultEstacion" name="MultEstacion" class="form-control" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-lg-12">
            <div id="grid_Ajustes" class="form-control"></div>
        </div>
    </div>

</form>


