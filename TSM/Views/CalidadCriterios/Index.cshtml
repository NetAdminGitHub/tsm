@{
    ViewBag.Title = "Definición de Criterios de Calidad";
    ViewBag.IdVersion = "TSM0101092|v20051901";
}
@section Scripts {
    <script src="~/Scripts/js/CalidadCriterios.js"></script>
}
<div class="form-row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">


                <ul id="bpecm">
                    <li class="k-state-active form-control">
                        <span class="TS-icon-AJUSTES" style="font-size: 1.7em;">&nbsp</span>
                        Configurar Criterios y Pruebas
                        <div class="form-row">
                            <div class="form-group col-lg-12">
                                <div class="form-row">
                                    <div class="form-group col-lg-6">
                                        <label for="lblgridCalidadCriterio">Registrar Criterios:</label>
                                        <div id="gridCalidadCriterio" class="form-control"></div>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label for="lblgridCalidadPruebas">Registrar Pruebas:</label>
                                        <div id="gridCalidadPruebas" class="form-control"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="k-state-active form-control">
                        <span class="TS-icon-LAPIZ" style="font-size: 1.7em;">&nbsp</span>
                        Detalle de Pruebas
                        <div class="form-row">
                            <div class="form-group col-lg-7">
                                <label for="CmbCalidadCriterios">Calidad Criterios:</label>
                                <input id="CmbCalidadCriterios" name="CmbCalidadCriterios" type="text" class="form-control" />
                            </div>
                            <div class="form-group col-lg-12">
                                <label for="lblgridCalidadCriteriosPruebas">Asignar Pruebas</label>
                                <div id="gridCalidadCriteriosPruebas" class="form-control"></div>
                            </div>
                        </div>
                    </li>
                </ul>


            </div>
        </div>
    </div>
</div>

