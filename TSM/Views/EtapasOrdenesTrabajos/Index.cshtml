@{
    ViewBag.Title = "Kanban de etapas";
    ViewBag.IdVersion = "TSM0101090|v20052301";
}
@section Scripts {
    <script src="~/Scripts/Utils/sortable.min.js"></script>
    <script src="~/Scripts/js/EtapasOrdenesTrabajos.js"></script>
    <script type="text/javascript">
        var Catalogo_IdOrdenTrabajo =@ViewData["Catalogo_IdOrdenTrabajo"];
    </script>
}
<div class="form-row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <div class="form-row">
                            <div class=" form-group col-lg-4">
                                <label for="dFechaDesde">Fecha Desde:</label>
                                <input id="dFechaDesde" name="dFechaDesde" class="form-control" />
                            </div>
                            <div class="form-group col-lg-4">
                                <label for="dFechaHasta">Fecha Hasta:</label>
                                <input id="dFechaHasta" name="dFechaHasta" class="form-control" />
                            </div>
                            <div class="form-group col-lg-4 align-self-end">
                                <input type="checkbox" id="chkRangFechas" name="chkRangFechas" class="k-checkbox">
                                <label class="k-checkbox-label" for="chkRangFechas" id="lblchkRangFechas">Rango de Fechas</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        <div class="form-row">
                            <div class="form-group col-lg-8">
                                <label for="CmbEtapasProcesos">Etapa Proceso:</label>
                                <input id="CmbEtapasProcesos" name="CmbEtapasProcesos" class="form-control" />
                            </div>
                            <div class="form-group col-lg-4 align-self-end">
                                <input type="checkbox" id="chkMe" name="chkVerTodas" class="k-checkbox">
                                <label class="k-checkbox-label" for="chkMe">Solo Asignadas</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        <div class="form-row">
                            <div class="form-group col-lg-6">
                                <label for="CmbTiposOrdenesTrabajos">Tipos Ordenes de Trabajo:</label>
                                <input id="CmbTiposOrdenesTrabajos" name="CmbTiposOrdenesTrabajos" class="form-control" />
                            </div>
                            <div class="form-group col-lg-6 align-self-end">
                                <input type="checkbox" id="chkVerTodas" name="chkVerTodas" class="k-checkbox">
                                <label class="k-checkbox-label" for="chkVerTodas">Ver todas (OTs activas y finalizadas)</label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label for="CmbCliente">Cliente</label>
                        <input id="CmbCliente" name="CmbCliente" type="text" class="form-control" />
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="CmbPrograma">Programa:</label>
                        <input id="CmbPrograma" name="CmbPrograma" type="text" class="form-control" />
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="CmbOrdenTrabajo">Orden de Trabajo:</label>
                        <input id="CmbOrdenTrabajo" name="CmbOrdenTrabajo" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-3">
                        <div id="toolbar"></div>
                    </div>
                </div>
                <div class="form-row">
                   
                </div>
                <div class="form-row">
                    <div id="myKanban" class="board">
                        @*espacio para dibujar el kanban*@
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
