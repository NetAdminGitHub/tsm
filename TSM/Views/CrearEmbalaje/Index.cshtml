
@{
    ViewBag.Title = "Creacion de Embalajes";
}

@section Scripts {

    <script type="text/javascript">
        var UrlServ = "@string.Format("{0}Servicios", TSM.Utils.Config.TSM_WebApi)";
        var xIdDespachoMercancia = "@ViewBag.IdDespachoMercancia";
    </script>

    <script src="~/Scripts/js/RegistroCreacionEmbalaje.js"></script>

}
<link href="~/Content/ConsultaCorteStyle.css" rel="stylesheet" />
<style>
    tsm-label-center {
        display: block;
        text-align: center;
    }
</style>
@*cambio de estado*@
<div id="vCambioEstado"></div>
<div class="row">
    <div class="card">
        <div class="card-body container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="form-group col-lg-12" style="display:none;">
                            <label for="txtIdDespachoMerc">Id Despacho:</label>
                            <input id="txtIdDespachoMerc" name="txtIdDespachoMerc" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-2" style="display:none;">
                            <label for="txtNoDoc">No. Embalaje:</label>
                            <input id="txtNoDoc" name="txtNoDoc" class="form-control" style="height:38px;" readonly />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-5">
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <label for="txtCliente">Cliente:</label>
                            <input id="txtCliente" name="txtCliente" class="form-control k-textbox" />
                        </div>
                        <div class="form-group col-lg-4">
                            <label for="txtPlanta" id="lblPlanta">Planta:</label>
                            <input id="txtPlanta" name="txtPlanta" class="form-control k-textbox" />
                        </div>
                        <div class="form-group col-lg-4">
                            <label for="dfDespacho" id="lblfDespacho">Fecha de Despacho:</label>
                            <input id="dfDespacho" name="dfDespacho" class="form-control" />
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label for="cmbOpcion">Consulta de Mercancía:</label>
                            <input id="cmbOpcion" name="cmbOpcion" type="text" class="form-control" />
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="CmbServicio">Servicio:</label>
                            <input id="CmbServicio" name="CmbServicio" class="form-control" />
                        </div>
                       
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12">
                            <div id="gCortes"> </div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-7">
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <label for="txtOrdenDespacho">Orden Despacho</label>
                            <input id="txtOrdenDespacho" name="txtOrdenDespacho" class="form-control k-textbox" />
                        </div>
                        <div class="col-lg-4">
                            <div class="row">
                                <div class="col-6 text-center mt-3"> <div class="bg-NoDisponible p-2 b" >Sugerido No Disponible</div> </div>
                                <div class="col-6 text-center mt-3"><div class="bg-CorteParcial p-2 b" >Despacho Parcial No Disponible</div> </div>
                            </div>
                        </div>
                        <div class="form-group col-lg-4 mt-auto text-right">


                            <button type="button" id="btnEtapa">Cambio de etapa</button>
                            <button type="button" id="btnRetornar">Regresar</button>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label for="cmbFm">Código FM:</label>
                            <input id="cmbFm" name="cmbFm" type="text" class="form-control" />
                        </div>
                        <div class="form-group col-lg-6 ">
                            <label for="cmbCorte">Corte:</label>
                            <input id="cmbCorte" name="cmbCorte" type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="row">

                        <div class="form-group col-lg-12">
                            <div id="gEnEmbalaje"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*vista modal detalle de preparado*@
<div id="vCrearUnidad"></div>

@*vista modal entrega a prod*@
<div id="vInfDiseno"></div>

@*vista modal corte*@
<div id="vConsultaEtapa"></div>
@*modal cambio de etapa*@
<div id="vCambioEtapa"></div>
